{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "C++ Debug",
        "type": "cppdbg",
        "request": "launch",
        "program": "${workspaceFolder}/build/Debug/NIAHttpBOT.exe", // 替换为你的可执行文件路径
        "args": [], // 可选，传递给可执行文件的参数
        "stopAtEntry": false, // 可选，设为 true 以在程序启动时暂停
        "cwd": "${workspaceFolder}/build/Debug/", // 可选，设置当前工作目录
        "environment": [], // 可选，设置环境变量
        "externalConsole": false, // 可选，设为 true 以在外部控制台打开程序
        "MIMode": "gdb", // 调试器类型，这里使用 GDB
        "logging": {
          "trace": true
        }
      }
    ]
  }